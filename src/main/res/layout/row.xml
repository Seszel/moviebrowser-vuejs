<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAdd"
            android:layout_width="111dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textCollectAdd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textColor="@color/black_olive"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@color/project_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yearGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEAR"
                android:textColor="@color/project_purple"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:background="@color/project_gray"
        android:gravity="center"
        android:padding="5sp"
        android:paddingHorizontal="5px"
        android:paddingVertical="5px"
        android:text="Add game to your collection"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>