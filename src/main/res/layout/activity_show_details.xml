<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_beige"
    tools:context=".ShowDetails"
    android:padding="10dp">


    <TextView
        android:id="@+id/textTitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="10sp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:padding="10sp"
        android:text="Details"
        android:textColor="@color/project_dark_blue"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:background="@color/project_gray"
        android:gravity="center"
        android:onClick="historyClick"
        android:padding="5sp"
        android:paddingHorizontal="5px"
        android:paddingVertical="5px"
        android:text="History of ranking"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle3"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHistory">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="58dp"
            android:orientation="vertical"
            android:padding="5sp">

            <TextView
                android:id="@+id/yearDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEAR"
                android:textColor="@color/project_purple"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rankDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RANK"
                android:textColor="@color/black_olive"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageDetails"
                android:layout_width="129dp"
                android:layout_height="160dp"
                android:layout_below="@+id/text" />

            <TextView
                android:id="@+id/descriptionDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION"
                android:textColor="@color/project_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/artistDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARTIST"
                android:textColor="@color/project_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/designerDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESIGNER"
                android:textColor="@color/project_gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buttonExpansions"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:background="@color/project_gray"
                    android:gravity="center"
                    android:onClick="expansionsClick"
                    android:padding="5sp"
                    android:paddingHorizontal="5px"
                    android:paddingVertical="5px"
                    android:text="See expansions"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/buttonLocation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:background="@color/project_gray"
                    android:gravity="center"
                    android:onClick="addToLocationClick"
                    android:padding="5sp"
                    android:text="Place in location"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/currentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION"
                android:textColor="@color/project_gray"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15sp"
                android:spinnerMode="dropdown" />



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>